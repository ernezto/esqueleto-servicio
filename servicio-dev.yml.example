database:
  # the name of your JDBC driver
  driverClass: org.postgresql.Driver

  # the username
  user: thoughtworks

  # the password
  password: Passw0rd

  # the JDBC URL
  url: jdbc:postgresql://localhost/senescyt

  # any properties specific to your JDBC driver:
  properties:
    charSet: UTF-8
    hibernate.dialect: org.hibernate.dialect.PostgreSQLDialect
    hibernate.show_sql: false
    hibernate.default_schema: servicio_${nombreMicroservicio}

  # the maximum amount of time to wait on an empty pool before throwing an exception
  maxWaitForConnection: 1s

  # the SQL query to run when validating a connection's liveness
  validationQuery: "/* DB Health Check */ SELECT 1"

  initialSize: 1
  minSize: 1
  maxSize: 2

  # whether or not idle connections should be validated
  checkConnectionWhileIdle: false

logging:
  level: DEBUG

  appenders:
    - type: console
      threshold: INFO
      target: stderr
      timeZone: EST

    # Log info, warnings and errors to our apps' main log.
    # Rolled over daily and retained for 5 days.
    - type: file
      threshold: INFO
      currentLogFilename: ./logs/servicio.log
      # When the log file rotates, the archived log will be renamed to this and gzipped. The
      # %d is replaced with the previous day (yyyy-MM-dd). Custom rolling windows can be created
      # by passing a SimpleDateFormat-compatible format as an argument: "%d{yyyy-MM-dd-hh}".
      archivedLogFilenamePattern: ./logs/servicio-%d.log.gz
      archivedFileCount: 5
      timeZone: EST

    # Log debug messages, info, warnings and errors to our apps' debug log.
    # Rolled over hourly and retained for 6 hours
    - type: file
      threshold: DEBUG
      currentLogFilename: ./logs/debug-servicio.log
      archivedLogFilenamePattern: ./logs/debug-servicio-%d{yyyy-MM-dd-hh}.log.gz
      archivedFileCount: 6
      timeZone: EST

server:
  adminConnectors:
    - type: http
      port: ${httpInicial.toInteger() + 1}
  applicationConnectors:
    - type: http
      port: ${httpInicial.toInteger()}
    - type: https
      port: ${httpsInicial.toInteger()}
      keyStorePath: test.keystore
      keyStorePassword: test
      validateCerts: false